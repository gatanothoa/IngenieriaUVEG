# CONFIGURACIÓN DEL CHATBOT WHATSAPP

# Configuración del Bot
BOT_NAME=WhatsApp Bot Assistant
BOT_VERSION=1.0.0

# Configuración de la Base de Datos
DB_MAX_MESSAGES=1000
AUTO_BACKUP=true
BACKUP_INTERVAL_HOURS=24

# Configuración de Logging
LOG_LEVEL=info
LOG_TO_FILE=true
LOG_TO_CONSOLE=true
MAX_LOG_FILE_SIZE=10485760
MAX_LOG_FILES=10

# Configuración de APIs (opcional)
# OPENWEATHER_API_KEY=tu_api_key_aqui
# NEWS_API_KEY=tu_api_key_aqui
# TRANSLATE_API_KEY=tu_api_key_aqui

# Configuración de Seguridad
ALLOWED_USERS=
ADMIN_USERS=

# Configuración de Funcionalidades
ENABLE_WEATHER=true
ENABLE_NEWS=true
ENABLE_TRANSLATE=true
ENABLE_REMINDERS=true
ENABLE_JOKES=true

# Configuración de Rate Limiting
RATE_LIMIT_MESSAGES_PER_MINUTE=10
RATE_LIMIT_COMMANDS_PER_HOUR=50

# Configuración de Mantenimiento
AUTO_CLEANUP_DAYS=7
STATISTICS_SAVE_INTERVAL=30
